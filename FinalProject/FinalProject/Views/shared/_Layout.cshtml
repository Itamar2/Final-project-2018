<!DOCTYPE html>
<html lang="he">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Private Lessons</title>
    <!-- CSS  -->
    <link href="~/css/materialize.css" rel="stylesheet" />
    <link href="~/css/icon.css" rel="stylesheet" />
    <link href="~/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/css/materialize-rtl.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
</head>
<body>
    <!----------------------------------------------------------------------Navigation--->
    <nav class="white" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" href="index.html" class="brand-logo">Lessons</a>
            <ul class="right hide-on-med-and-down">
                <li><a href="#" class="showLogin">Login<i class="material-icons left">keyboard_arrow_right</i></a></li>
                <li><a href="registerStudent.html">Register Student<i class="material-icons left">edit</i></a></li>
                <li><a href="registerTeacher.html">Register Teacher<i class="material-icons left">edit</i></a></li>
            </ul>
            <ul id="nav-mobile" class="sidenav">
                <li><a href="#" class="showLogin">Login<i class="material-icons left">keyboard_arrow_right</i></a></li>
                <li><a href="registerStudent.html">Register Student<i class="material-icons left">edit</i></a></li>
                <li><a href="registerTeacher.html">Register Teacher<i class="material-icons left">edit</i></a></li>
            </ul>
            <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        </div>
    </nav>
    <!----------------------------------------------------------------------Login Big screen-->
    <div class="section loginSection brown lighten-4 hide-on-small-only">
        <div class="container">
            <div class="row">
                <div class="col l12 m12 s12">
                    <form action="#" class="right">
                        Email:
                        <input type="text" name="email" class="browser-default myinput" />
                        Password:
                        <input type="password" name="password" class="browser-default myinput" />
                        <input type="submit" name="submitLogin" class="btn-small" value="Login" style="margin-bottom:5px;" />
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!----------------------------------------------------------------------Login for mobile devices-->
    <div class="section loginSectionSmall brown lighten-4 hide-on-med-and-up">
        <div class="container">
            <div class="row">
                <form action="#" class="right">
                    <div class="col s12" style="margin-bottom:10px;">
                        Email:
                        <input type="text" name="email" class="browser-default myinputSmall" style="margin-bottom:10px;" />
                    </div>
                    <div class="col s12">
                        Password:
                        <input type="password" name="password" class="browser-default myinputSmall" style="margin-bottom:10px;" />
                    </div>
                    <div class="col s12 center-align">
                        <input type="submit" name="submitLogin" class="btn-small" value="Login" style="margin-bottom:5px;" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    @RenderBody();
    <!-------------------------------------------------------Footer--->

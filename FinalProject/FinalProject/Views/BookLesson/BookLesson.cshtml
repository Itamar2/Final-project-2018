@model FinalProject.Models.Schedule
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<p>are you sure you want to book this lesson?</p>

<p>
    date: @Model.Date.ToString("dd/MM/yyyy")<br />
    Start hour: @Model.Start.TimeOfDay.ToString()
    Finish hour: @Model.Finish.TimeOfDay.ToString()
</p>

<form asp-controller="BookLesson" asp-action="BookLesson">
    <input type="hidden" asp-for="@Model.Id" />
    <input type="submit" value="Yes" />
</form>